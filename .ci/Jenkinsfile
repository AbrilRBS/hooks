pipeline {
    agent none

    stages {
        stage("Windows") {
            failFast true
            parallel {
                stage('Windows - py36') {
                    agent {
                        label 'Windows'
                    }
                    stages {
                        stage('Windows - py36 - Generate environment') {
                            environment {
                                PYVER = 'py36'
                            }
                            steps {
                                bat '.ci/generate_env_windows.bat'
                            }
                        }
                        stage('Linux - py36 - conandev') {
                            environment {
                                TOXENV = 'py36-conandev'
                            }
                            steps {
                                bat 'tox'
                            }
                        }
                        stage('Linux - py36 - conancurrent') {
                            environment {
                                TOXENV = 'py36-conancurrent'
                            }
                            steps {
                                bat 'tox'
                            }
                        }
                    }
                }
                stage('Windows - py38') {
                    agent {
                        label 'Windows'
                    }
                    stages {
                        stage('Windows - py38 - Generate environment') {
                            environment {
                                PYVER = 'py38'
                            }
                            steps {
                                bat '.ci/generate_env_windows.bat'
                            }
                        }
                        stage('Windows - py38 - conandev') {
                            environment {
                                TOXENV = 'py38-conandev'
                            }
                            steps {
                                bat 'tox'
                            }
                        }
                        stage('Windows - py38 - conancurrent') {
                            environment {
                                TOXENV = 'py38-conancurrent'
                            }
                            steps {
                                bat 'tox'
                            }
                        }
                    }
                }
            }
        }
        stage("Linux") {
            failFast true
            parallel {
                stage('Linux - py35') {
                    agent {
                        label 'Linux'
                    }
                    stages {
                        stage('Linux - py35 - Generate environment') {
                            environment {
                                PYVER = 'py35'
                            }
                            steps {
                                sh '.ci/generate_env_linux.sh'
                            }
                        }
                        stage('Linux - py35 - conandev') {
                            environment {
                                TOXENV = 'py35-conandev'
                            }
                            steps {
                                sh 'tox'
                            }
                        }
                        stage('Linux - py35 - conancurrent') {
                            environment {
                                TOXENV = 'py35-conancurrent'
                            }
                            steps {
                                sh 'tox'
                            }
                        }
                    }
                }
                stage('Linux - py38') {
                    agent {
                        label 'Linux'
                    }
                    stages {
                        stage('Linux - py38 - Generate environment') {
                            environment {
                                PYVER = 'py38'
                            }
                            steps {
                                sh '.ci/generate_env_linux.sh'
                            }
                        }
                        stage('Linux - py38 - conandev') {
                            environment {
                                TOXENV = 'py38-conandev'
                            }
                            steps {
                                sh 'tox'
                            }
                        }
                        stage('Linux - py38 - conancurrent') {
                            environment {
                                TOXENV = 'py38-conancurrent'
                            }
                            steps {
                                sh 'tox'
                            }
                        }
                    }
                }
            }
        }
    }
}
