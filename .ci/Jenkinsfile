pipeline {
    agent none

    stages {
        stage('Clone sources') {
            agent any
            steps {
                checkout scm
            }
        }
        stage('Linux - conancurrent - py38') {
            agent {
                label 'Linux'
            }
            environment {
                PYVER = 'py38'
                TOXENV = 'py38-conancurrent'
            }
            steps {
                sh '.ci/install_linux.sh'
            }
        }
    }
}
