pipeline {
    agent none
    stages {
        stage("Macos") {
            failFast true
            parallel {
                stage('Macos - py36') {
                    agent {
                        label 'Macos'
                    }
                    stages {
                        stage('Macos - py36 - Generate environment') {
                            environment {
                                PYVER = 'py36'
                            }
                            steps {
                                sh '.ci/generate_env_macos.sh'
                            }
                        }
                        stage('Macos - py36 - conandev') {
                            environment {
                                PYVER = 'py36'
                                TOXENV = 'py36-conandev'
                            }
                            steps {
                                sh '.ci/run_tox.sh'
                            }
                        }
                        stage('Macos - py36 - conancurrent') {
                            environment {
                                PYVER = 'py36'
                                TOXENV = 'py36-conancurrent'
                            }
                            steps {
                                sh '.ci/run_tox.sh'
                            }
                        }
                    }
                }
                stage('Macos - py37') {
                    agent {
                        label 'Macos'
                    }
                    stages {
                        stage('Macos - py37 - Generate environment') {
                            environment {
                                PYVER = 'py37'
                            }
                            steps {
                                sh '.ci/generate_env_macos.sh'
                            }
                        }
                        stage('Macos - py37 - conandev') {
                            environment {
                                PYVER = 'py37'
                                TOXENV = 'py37-conandev'
                            }
                            steps {
                                sh '.ci/run_tox.sh'
                            }
                        }
                        stage('Macos - py37 - conancurrent') {
                            environment {
                                PYVER = 'py37'
                                TOXENV = 'py37-conancurrent'
                            }
                            steps {
                                sh '.ci/run_tox.sh'
                            }
                        }
                        stage('Macos - py37 - conanprev') {
                            environment {
                                PYVER = 'py37'
                                TOXENV = 'py37-conanprev'
                            }
                            steps {
                                sh '.ci/run_tox.sh'
                            }
                        }
                        stage('Macos - py37 - conanprevprev') {
                            environment {
                                PYVER = 'py37'
                                TOXENV = 'py37-conanprevprev'
                            }
                            steps {
                                sh '.ci/run_tox.sh'
                            }
                        }
                    }
                }
            }
        }
        stage("Windows") {
            failFast true
            parallel {
                stage('Windows - py36') {
                    agent {
                        label 'Windows'
                    }
                    stages {
                        stage('Windows - py36 - Generate environment') {
                            environment {
                                PYVER = 'py36'
                            }
                            steps {
                                bat '.ci/generate_env_windows.bat'
                            }
                        }
                        stage('Windows - py36 - conancurrent') {
                            environment {
                                TOXENV = 'py36-conancurrent'
                            }
                            steps {
                                bat 'tox --recreate'
                            }
                        }
                        stage('Windows - py36 - conanprev') {
                            environment {
                                TOXENV = 'py36-conanprev'
                            }
                            steps {
                                bat 'tox --recreate'
                            }
                        }
                    }
                }
                stage('Windows - py37') {
                    agent {
                        label 'Windows'
                    }
                    stages {
                        stage('Windows - py37 - Generate environment') {
                            environment {
                                PYVER = 'py37'
                            }
                            steps {
                                bat '.ci/generate_env_windows.bat'
                            }
                        }
                        stage('Windows - py37 - conancurrent') {
                            environment {
                                TOXENV = 'py37-conancurrent'
                            }
                            steps {
                                bat 'tox --recreate'
                            }
                        }
                        stage('Windows - py37 - conanprev') {
                            environment {
                                TOXENV = 'py37-conanprev'
                            }
                            steps {
                                bat 'tox --recreate'
                            }
                        }
                    }
                }
            }
        }
        stage("Linux") {
            failFast true
            parallel {
                stage('Linux - py36') {
                    agent {
                        label 'Linux'
                    }
                    stages {
                        stage('Linux - py36 - Generate environment') {
                            environment {
                                PYVER = 'py36'
                            }
                            steps {
                                sh '.ci/generate_env_linux.sh'
                            }
                        }
                        stage('Linux - py36 - conandev') {
                            environment {
                                TOXENV = 'py36-conandev'
                            }
                            steps {
                                sh '''
                                    eval "$(pyenv init -)"
                                    pyenv activate conan
                                    tox
                                '''
                            }
                        }
                        stage('Linux - py36 - conancurrent') {
                            environment {
                                TOXENV = 'py36-conancurrent'
                            }
                            steps {
                                sh '''
                                    eval "$(pyenv init -)"
                                    pyenv activate conan
                                    tox
                                '''
                            }
                        }
                    }
                }
                stage('Linux - py37') {
                    agent {
                        label 'Linux'
                    }
                    stages {
                        stage('Linux - py37 - Generate environment') {
                            environment {
                                PYVER = 'py37'
                            }
                            steps {
                                sh '.ci/generate_env_linux.sh'
                            }
                        }
                        stage('Linux - py37 - conandev') {
                            environment {
                                TOXENV = 'py37-conandev'
                            }
                            steps {
                                sh '''
                                    eval "$(pyenv init -)"
                                    pyenv activate conan
                                    tox
                                '''
                            }
                        }
                        stage('Linux - py37 - conancurrent') {
                            environment {
                                TOXENV = 'py37-conancurrent'
                            }
                            steps {
                                sh '''
                                    eval "$(pyenv init -)"
                                    pyenv activate conan
                                    tox
                                '''
                            }
                        }
                        stage('Linux - py37 - conanprev') {
                            environment {
                                TOXENV = 'py37-conanprev'
                            }
                            steps {
                                sh '''
                                    eval "$(pyenv init -)"
                                    pyenv activate conan
                                    tox
                                '''
                            }
                        }
                        stage('Linux - py37 - conanprevprev') {
                            environment {
                                TOXENV = 'py37-conanprevprev'
                            }
                            steps {
                                sh '''
                                    eval "$(pyenv init -)"
                                    pyenv activate conan
                                    tox
                                '''
                            }
                        }
                    }
                }
            }
        }
    }
}
